<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fotolocal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="150dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Puedes consultar los JSON \n que arroja cada categorÃ­a"
            android:textColor="@color/white"
            android:textSize="@dimen/titulos"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="290dp">

        <Button
            android:id="@+id/botonProductos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/Naranja_Medio"
            android:textStyle="bold"
            android:text="Productos" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="400dp">

        <Button
            android:id="@+id/botonServicios"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/Naranja_Medio"
            android:textStyle="bold"
            android:text="Servicios" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="500dp">

        <Button
            android:id="@+id/botonSucursales"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/Naranja_Medio"
            android:textStyle="bold"
            android:text="Sucursales" />
    </LinearLayout>
</FrameLayout>